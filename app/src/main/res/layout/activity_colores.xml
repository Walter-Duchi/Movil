                            android:layout_height="wrap_content"
                            android:text="@string/amarillo"
                            android:textColor="@color/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

